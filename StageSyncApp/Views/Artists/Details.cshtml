@model StageSyncApp.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bookings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            Venue
                        </td>
                        <td>
                            Stage
                        </td>
                        <td>
                            Booking Date
                        </td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var booking in Model.Bookings)
                    {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => booking.VenueName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => booking.StageName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => booking.BookingDate)
                                </td>
                            </tr>
                        
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArtistId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>