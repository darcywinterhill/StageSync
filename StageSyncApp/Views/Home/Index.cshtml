@{
    ViewData["Title"] = "Stage Sync";
}

<div class="landing-container">
    <div class="grid-item item-1">
        <h1 class="logo">
            Stage
            <br />
            Sync
        </h1>
    </div>
    <div class="grid-item item-2">
       <a 
           class="login-link" 
           asp-area="Identity" 
           asp-page="/Account/Login"
        >
           <div class="login-button">
                <p class="login-button-text">
                    Log in
                </p>
                <div class="arrow-circle">
                    <img 
                        src="~/images/arrow-right.png" 
                        alt="image by icons8 https://icons8.com/icons/set/arrow-right" 
                    />
                </div>
           </div>
       </a>
    </div>
    <div class="grid-item item-3">
        <footer>
            <div class="landing-text-container">
                <p>
                    Seamlessly connecting venues with top-tier artists for hassle-free bookings
                </p>
            </div>
        </footer>
    </div>
</div>
