@model StageSyncApp.Models.Booking

<header>
    <div class="header-logo-container">
        <h1 class="header-logo">
            Stage Sync
        </h1>
    </div>
    <div class="header-links-container">
        <a class="header-link" asp-controller="Bookings" asp-action="Logout">
            <p class="link-text">
                Log Out
            </p>
        </a>
        <span class="divider">
            /
        </span>
        <a class="header-link"
           asp-controller="Bookings"
           asp-action="Index">
            <p class="link-text">
                Overview
            </p>
        </a>
        <span class="divider">
            /
        </span>
        <a class="header-link"
           asp-controller="Bookings"
           asp-action="Booked">
            <p class="link-text">
                Bookings
            </p>
        </a>
        <span class="divider">
            /
        </span>
        <a class="header-link"
           asp-controller="Bookings"
           asp-action="Unbooked">
            <p class="link-text">
                Unbooked
            </p>
        </a>
    </div>
</header>


<div class="overview-container">
    <h1 class="booking-title">
        Alter booking
    </h1>
    <p class="info-text">
        Here you can alter your booking - add, change or cancel artist
    </p>

    <div class="form-container">
        <form asp-action="Edit" class="form-wrapper">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <input type="hidden" asp-for="VenueName" value="The Lunar Lounge" />
            <div>
                <label asp-for="StageName" class="label-text"></label>
                <input asp-for="StageName" class="form-control" readonly />
                <span asp-validation-for="StageName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="BookingDate" class="label-text"></label>
                <input asp-for="BookingDate" class="form-control" type="date" readonly/>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ArtistId" class="label-text">Artist</label>
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistName">
                    <option value=""></option>
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <br />
            <div class="submit-form-container">
                <input type="submit" value="Save" class="submit-form" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
